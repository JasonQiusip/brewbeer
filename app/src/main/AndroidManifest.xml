<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ltbrew.brewbeer">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".uis.activity.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".uis.activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".uis.activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.activity.ForgetPwdActivity"
            android:label="@string/title_activity_forget_pwd"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.activity.BrewDetailActivity"
            android:label="@string/title_activity_brew_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.activity.AddDevActivity"
            android:label="@string/title_activity_add_dev"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.activity.AddRecipeActivity"
            android:label="@string/title_activity_add_recipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".uis.activity.BrewHomeActivity"
            android:label="@string/title_activity_brew_session"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".uis.activity.BaseActivity"></activity>
    </application>

</manifest>