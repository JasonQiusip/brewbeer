<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MagicProgressBar">
        <attr name="mpb_percent" format="float" />
        <attr name="mpb_fill_color" format="color" />
        <attr name="mpb_background_color" format="color" />
        <attr name="mpb_flat" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />
    </declare-styleable>
</resources>