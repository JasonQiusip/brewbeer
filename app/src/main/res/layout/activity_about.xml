<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ltbrew.brewbeer.uis.activity.AboutActivity">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/include" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.1.2"
        android:layout_toRightOf="@+id/textView3"
        android:textSize="16sp"
        android:layout_below="@+id/include"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/appVerTv"
        android:layout_marginRight="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="160dp"
        android:text="APP版本号"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/appVerTv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="高通QSC版本"
        android:id="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="1"
        android:id="@+id/qscVerTv"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/appVerTv"
        android:layout_alignEnd="@+id/appVerTv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="wifi芯片版本"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="1"
        android:id="@+id/wifiVerTv"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/qscVerTv"
        android:layout_alignEnd="@+id/qscVerTv" />


</RelativeLayout>
